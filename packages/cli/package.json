{
  "name": "@slidev-ai/cli",
  "version": "0.1.0",
  "description": "CLI tool for AI-powered Slidev presentation generation",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "slidev-ai": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "clean": "rimraf dist",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@slidev-ai/core": "workspace:*",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "ora": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.25",
    "rimraf": "^6.1.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
