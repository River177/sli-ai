{
  "name": "@slidev-ai/layout-checker",
  "version": "0.1.0",
  "description": "Layout detection utilities for Slidev presentations",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown src/index.ts --format esm --dts --clean",
    "dev": "tsdown src/index.ts --format esm --dts --watch",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@slidev-ai/core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.19.25",
    "rimraf": "^6.1.2",
    "tsdown": "^0.17.1",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "playwright": "^1.40.0"
  },
  "peerDependenciesMeta": {
    "playwright": {
      "optional": true
    }
  }
}
