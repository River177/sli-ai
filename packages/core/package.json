    "remark-parse": "^11.0.0",
    "unified": "^11.0.5",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/node": "^20.19.25",
    "rimraf": "^6.1.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "peerDependencies": {
    "playwright": "^1.40.0"
  },
  "peerDependenciesMeta": {
    "playwright": {
      "optional": true
