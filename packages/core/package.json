{
  "name": "@slidev-ai/core",
  "version": "0.1.0",
  "description": "Core library for slidev-ai - parsing, AI generation, and layout detection",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
